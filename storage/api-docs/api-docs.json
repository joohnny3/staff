        "/notify": {
            "post": {
                "tags": [
                    "Notify"
                ],
                "summary": "新增通知訊息",
                "description": "\n     *      Required 必填值: 'recipient_name', 'email', 'subject', 'template', 'content', 'service'\n     *\n     *      通知服務類型 可選值: 1:Gmail, 2:Line, 3:Jandi, 4:Slack\n     *\n     *      Gmail template 可選值: 'exchange_rate', 'resig', 'social_media_case'\n     *\n     *      template content範例如下 ↓ ↓ ↓\n     *\n     *      exchange_rate: {'year':'2024','month':'02'}\n     *\n     *      resig: {'resignations':[{'employee_id':'','name':'','name_en':'','department':'','resignation_date':'','last_working_day':'','note':''},\n     *                              {'employee_id':'','name':'','name_en':'','department':'','resignation_date':'','last_working_day':'','note':''}]}\n     *\n     *      social_media_case: {'month': '03','cases': ['黑橋牌年節活動貼文 一週吸引超過3,000人參與',\n     *                                                  'Richart LINE OA推播訊息透過創意包裝互動成長3.7倍',\n     *                                                  '報獎得獎率100%！金銀銅佳作全拿下！']}\n     *     ",
                "operationId": "59680b320ea59c5a7aa0d3cdb1be556e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ]
                            },
                            "example": {
                                "recipient_name": "張育誠",
                                "email": "theyouchman@gmail.com",
                                "carbon_copy": [
                                    "johnny31258@gmail",
                                    "johnny.chang@js-adways.com.tw"
                                ],
                                "blind_carbon_copy": [
                                    "johnny31258@gmail",
                                    "johnny.chang@js-adways.com.tw"
                                ],
                                "subject": "台灣銀行2024年02月份平均匯率表",
                                "template": "exchange_rate",
                                "content": {
                                    "year": "2024",
                                    "month": "02"
                                },
                                "attachment": [
                                    "2024ExchangeRate-每月一號提供.xlsx"
                                ],
                                "service": 1
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "請求成功",
                        "headers": {
                            "test": {
                                "description": "Employee request ID",
                                "schema": {
                                    "type": "integer",
                                    "format": "int64"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "success": true,
                                    "data": {
                                        "recipient_name": "張育誠",
                                        "email": "theyouchman@gmail.com",
                                        "carbon_copy": [
                                            "johnny31258@gmail",
                                            "johnny.chang@js-adways.com.tw"
                                        ],
                                        "blind_carbon_copy": [
                                            "johnny31258@gmail",
                                            "johnny.chang@js-adways.com.tw"
                                        ],
                                        "subject": "台灣銀行2024年02月份平均匯率表",
                                        "template": "exchange_rate",
                                        "content": {
                                            "year": "2024",
                                            "month": "02"
                                        },
                                        "service": 1
                                    }
                                }
                            }
                        }
                    },
                    "400": {
